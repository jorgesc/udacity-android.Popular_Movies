<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.udacity_project_1.popularmovies.MainActivity">

    <fragment
        android:tag="MainActivityFragment"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:name="com.example.udacity_project_1.popularmovies.utils.Fragments.MainActivityFragment"
        android:id="@+id/fragment_main_activity"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_movie_details_activity_container"
        android:layout_weight="2"
        >

    </FrameLayout>
</LinearLayout>
